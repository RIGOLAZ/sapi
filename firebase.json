{
  "functions": [
    {
      "source": "functions",
      "dotenv": [".env"],
      "codebase": "default",
      "runtime": "nodejs20",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ],
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/validation-key.txt",
        "destination": "/validation-key.txt"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "headers": [
      {
        "source": "validation-key.txt",
        "headers": [
          {
            "key": "Content-Type",
            "value": "text/plain; charset=utf-8"
          },
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          }
        ]
      }
    ],
  "emulators": {
    "functions": {
      "port": 3000
    },
    "hosting": {
      "port": 3001
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true,
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    }
  }
}